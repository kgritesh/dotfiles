	email = ritesh@vertexcover.io
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[submodule]
	recurse = true
[advice]
	detachedHead = false
[rerere]
	enabled = true
	autoUpdate = true
